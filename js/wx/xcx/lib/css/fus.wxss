
/* 关注钱皇 fus (follow us) */
fus {
    box-sizing: border-box;
    height: 40px;
    background-color: #f5f5f5;
    flex-shrink: 0;
}

fus-ico {
    display: block;
    width: 40px;
    height: 100%;
    padding: 5px;
    box-sizing: border-box;
    color:white;
}

fus-ico::before {
    display: block;
    background-color: #ba9f6e;
    text-align: center;
    content: "皇";

    height: 30px;
    line-height: 30px;
    border-radius: 4px;
    font-weight: bold;
    font-size: 15px;
}

fus-title {
    padding: 5px 0;

}

fus-app-no {
    font-size: 15px;
    color: #000011;
}

fus-desp {
    font-size: 15px;
    color: #b1b1b1;
}

.fus-btn {
    box-sizing: border-box;
    border-radius: 0;
    margin: 8px 0;
    font-size: 15px;
    border: 1px solid #333333;
    line-height: 24px;
    margin-right: 5px;
}

.fus-btn::before {
    border-radius: 0;
}

.fus-btn::after {
    border-radius: 0;
}

fus-close {
    width: 40px;
    align-items: center;
    justify-content:center;
}
